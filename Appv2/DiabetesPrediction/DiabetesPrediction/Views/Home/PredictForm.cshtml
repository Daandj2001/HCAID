@model PredictViewModel
@{
    ViewData["Title"] = "Predict";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @*<title>NoteForm</title>*@
    @*<link rel="stylesheet" href="/css/style.css" />*@
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    @*<link rel="stylesheet" href="~/css/site.css" />*@
</head>

<body>

    <p class="mt-5" style="font-family:verdana; font-size:30px;">Get your prediction</p>
    <p style="font-size:21px;">To receive your personal prediction please fill in this form.</p>
    <form asp-action="PredictForm" method="post" class="m-2">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="container border border-secondary rounded-3 shadow">
            <div class="row mt-2">
                <div class="form-group col-md-4">
                    <label asp-for="Height" class="mt-4"></label>
                    <input asp-for="Height" class="form-control" style="width: 120px;" />
                    <span asp-validation-for="Height" class="text-danger"></span>
                </div>
                

                <div class="form-group col-md-8">
                    <label asp-for="PhysHlth"></label>
                    <input asp-for="PhysHlth" class="form-control" style="width: 120px;" />
                    <span asp-validation-for="PhysHlth" class="text-danger"></span>
                </div>
            </div>
            <div class="row mt-2">
                <div class="form-group col-md-4">
                    <label asp-for="Weight"></label>
                    <input asp-for="Weight" class="form-control" style="width: 120px;" />
                    <span asp-validation-for="Weight" class="text-danger"></span>
                </div>

                <div class="form-group col-md-8">
                    <label asp-for="genHlth"></label>
                    <input asp-for="genHlth" class="form-control" style="width: 120px;" />
                    <span asp-validation-for="genHlth" class="text-danger"></span>
                </div>
            </div>
            <div class="row mt-2">
                <div class="form-group col-md-4">
                    <label asp-for="Age"></label>
                    <input asp-for="Age" class="form-control" style="width: 120px;" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>
            </div>

        
            <div class="row mt-2">
                <div class="form-group col-md-5">
           
                    <input type="checkbox" asp-for="DiffWalk" class="form-check-input" />
                    <label asp-for="DiffWalk"></label>
                    <span asp-validation-for="DiffWalk" class="text-danger"></span>
                </div>
                <div class="form-group col-md-7">

                    <input asp-for="HeartDiseaseorAttack" class="form-check-input" />
                    <label asp-for="HeartDiseaseorAttack"></label>
                    <span asp-validation-for="HeartDiseaseorAttack" class="text-danger"></span>
                </div>
                
            </div>

            <div class="row mt-2 mb-3">
                <div class="form-group col-md-5">

                    <input asp-for="Stroke" class="form-check-input" />
                    <label asp-for="Stroke"></label>
                    <span asp-validation-for="Stroke" class="text-danger"></span>
                </div>
                <div class="form-group col-md-7">
            
                    <input class="form-check-input" asp-for="PhysActivity" />
                    <label asp-for="PhysActivity"></label>
                    <span asp-validation-for="PhysActivity" class="text-danger"></span>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-outline-primary mt-3">Predict</button>
        <a asp-action="Index" class="btn btn-outline-warning  mx-3 mt-3">Cancel</a>
    </form>
</body>